---
import { ViewTransitions } from 'astro:transitions';
import '../styles/themes/indigo.css';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  noIndex?: boolean;
}

const BASE_URL = import.meta.env.BASE_URL;

const {
  title,
  description = 'Ship your SaaS 10x faster with Velocity Pro â€” the premium Astro template.',
  ogImage = `${BASE_URL}images/og-image.svg`,
  noIndex = false,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <title>{title} | Velocity Pro</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | Velocity Pro`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Velocity Pro`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href={`${BASE_URL}favicon.svg`} />

    <!-- Font preloads -->
    <link rel="preload" href={`${BASE_URL}fonts/inter-variable.woff2`} as="font" type="font/woff2" crossorigin />
    <link rel="preload" href={`${BASE_URL}fonts/jetbrains-mono-variable.woff2`} as="font" type="font/woff2" crossorigin />

    <ViewTransitions />

    <!-- Theme init (prevent flash) -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme');
        if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.setAttribute('data-theme', 'dark');
        }
      })();
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
