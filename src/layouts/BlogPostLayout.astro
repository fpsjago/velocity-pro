---
import BaseLayout from './BaseLayout.astro';
import Navbar from '../components/Navigation/Navbar';
import FooterMain from '../components/Navigation/FooterMain.astro';
import BackToTop from '../components/Layout/BackToTop';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  variant?: 'standard' | 'wide' | 'minimal';
  author?: { name: string; avatar?: string };
  date?: string;
  readTime?: string;
  category?: string;
}

const {
  title,
  description,
  ogImage,
  variant = 'standard',
  author,
  date,
  readTime,
  category,
} = Astro.props;
---

<BaseLayout title={title} description={description} ogImage={ogImage}>
  <Navbar client:load />
  <article class:list={['blog-post', `blog-post--${variant}`]} transition:animate="slide">
    <header class="blog-post__header">
      <div class="blog-post__header-inner">
        {category && <span class="blog-post__category">{category}</span>}
        <h1 class="blog-post__title">{title}</h1>
        {(author || date || readTime) && (
          <div class="blog-post__meta">
            {author && (
              <div class="blog-post__author">
                {author.avatar && <img src={author.avatar} alt={author.name} class="blog-post__avatar" width="40" height="40" />}
                <span>{author.name}</span>
              </div>
            )}
            {date && <time class="blog-post__date">{date}</time>}
            {readTime && <span class="blog-post__read-time">{readTime}</span>}
          </div>
        )}
      </div>
    </header>
    <div class="blog-post__body">
      {variant === 'standard' && (
        <aside class="blog-post__toc">
          <slot name="toc" />
        </aside>
      )}
      <div class="blog-post__content prose">
        <slot />
      </div>
    </div>
  </article>
  <FooterMain />
  <BackToTop client:idle />
</BaseLayout>

<style>
  .blog-post {
    padding-top: 64px;
  }

  .blog-post__header {
    padding: var(--space-10) var(--space-4) var(--space-8);
    text-align: center;
  }

  .blog-post__header-inner {
    max-width: var(--container-md);
    margin: 0 auto;
  }

  .blog-post__category {
    display: inline-block;
    padding: var(--space-1) var(--space-3);
    background: var(--color-primary-light);
    color: var(--color-primary);
    border-radius: var(--radius-full);
    font-size: var(--font-small);
    font-weight: 600;
    margin-bottom: var(--space-4);
  }

  .blog-post__title {
    font-size: var(--font-h1);
    font-weight: 800;
    margin-bottom: var(--space-5);
  }

  .blog-post__meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    color: var(--color-text-secondary);
    font-size: var(--font-small);
  }

  .blog-post__author {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .blog-post__avatar {
    border-radius: var(--radius-full);
    width: 40px;
    height: 40px;
    object-fit: cover;
  }

  .blog-post__body {
    max-width: var(--container-lg);
    margin: 0 auto;
    padding: 0 var(--space-4);
    display: grid;
    gap: var(--space-8);
  }

  /* Standard: sidebar + content */
  .blog-post--standard .blog-post__body {
    grid-template-columns: 220px 1fr;
  }

  .blog-post__toc {
    position: sticky;
    top: 80px;
    height: fit-content;
  }

  /* Wide: full width content */
  .blog-post--wide .blog-post__content {
    max-width: var(--container-lg);
  }

  /* Minimal: narrow centered */
  .blog-post--minimal .blog-post__content {
    max-width: var(--container-sm);
    margin: 0 auto;
    font-size: 1.125rem;
    line-height: var(--leading-relaxed);
  }

  .prose {
    line-height: var(--leading-normal);
  }

  .prose :global(h2) {
    font-size: var(--font-h3);
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
  }

  .prose :global(p) {
    margin-bottom: var(--space-4);
  }

  .prose :global(img) {
    border-radius: var(--radius-lg);
    margin: var(--space-6) 0;
  }

  @media (max-width: 1023px) {
    .blog-post--standard .blog-post__body {
      grid-template-columns: 1fr;
    }
    .blog-post__toc {
      display: none;
    }
  }
</style>
