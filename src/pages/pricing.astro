---
// Pricing page — Velocity Pro
---
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Pricing — Velocity Pro</title>
</head>
<body>
  <main>
    <section style="text-align:center;padding:5rem 1.5rem 2rem;">
      <h1 style="font-size:clamp(2rem,4vw,3.5rem);font-weight:800;">Simple, transparent pricing</h1>
      <p style="color:#64748b;max-width:560px;margin:1rem auto 0;">No hidden fees. Start free, upgrade when you're ready.</p>
    </section>

    <div id="pricing-cards"></div>
    <div id="pricing-comparison"></div>
    <div id="pricing-faq"></div>
  </main>

  <script>
    import { createElement } from 'react';
    import { createRoot } from 'react-dom/client';
    import PricingCards from '../components/Pricing/PricingCards';
    import PricingComparison from '../components/Pricing/PricingComparison';
    import PricingFAQ from '../components/Pricing/PricingFAQ';
    import { plans, comparisonFeatures } from '../data/pricing';
    import { pricingFaqItems } from '../data/faq';

    createRoot(document.getElementById('pricing-cards')!).render(
      createElement(PricingCards, { plans })
    );
    createRoot(document.getElementById('pricing-comparison')!).render(
      createElement(PricingComparison, { features: comparisonFeatures })
    );
    createRoot(document.getElementById('pricing-faq')!).render(
      createElement(PricingFAQ, { items: pricingFaqItems })
    );
  </script>
</body>
</html>
