---
import DefaultLayout from '../layouts/DefaultLayout.astro';
import HeroHome from '../components/Hero/HeroHome';
import Section from '../components/Layout/Section.astro';
import Container from '../components/Layout/Container.astro';
import Divider from '../components/Layout/Divider.astro';

const BASE_URL = import.meta.env.BASE_URL;
---

<DefaultLayout title="Home" description="Ship your SaaS 10x faster with Velocity Pro.">
  <HeroHome client:load />

  <Divider variant="gradient" />

  <Section variant="muted" padding="lg">
    <Container size="lg">
      <div style="text-align: center; padding: 3rem 0;">
        <h2 style="font-size: var(--font-h2); font-weight: 700; margin-bottom: 1rem;">
          Everything you need
        </h2>
        <p style="color: var(--color-text-secondary); max-width: 540px; margin: 0 auto; margin-bottom: 3rem;">
          Production-ready components with modern animations, particle effects, and premium design.
        </p>
        
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 2rem; max-width: 1000px; margin: 0 auto;">
          <div style="padding: 2rem; background: var(--color-surface); border-radius: var(--radius-lg); border: 1px solid var(--color-border);">
            <h3 style="font-size: var(--font-h3); font-weight: 700; margin-bottom: 0.75rem;">Particle Effects</h3>
            <p style="color: var(--color-text-secondary);">Beautiful animated particle backgrounds with tsParticles.</p>
          </div>
          
          <div style="padding: 2rem; background: var(--color-surface); border-radius: var(--radius-lg); border: 1px solid var(--color-border);">
            <h3 style="font-size: var(--font-h3); font-weight: 700; margin-bottom: 0.75rem;">Gradient Meshes</h3>
            <p style="color: var(--color-text-secondary);">Premium gradient overlays and animated backgrounds.</p>
          </div>
          
          <div style="padding: 2rem; background: var(--color-surface); border-radius: var(--radius-lg); border: 1px solid var(--color-border);">
            <h3 style="font-size: var(--font-h3); font-weight: 700; margin-bottom: 0.75rem;">Smooth Animations</h3>
            <p style="color: var(--color-text-secondary);">Scroll-triggered and interactive animations throughout.</p>
          </div>
        </div>
      </div>
    </Container>
  </Section>
</DefaultLayout>
